{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Yuzu Presence",
    "version": "0.1.14",
    "identifier": "com.yuzu-presence.app",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Yuzu Presence",
                "width": 300,
                "height": 420,
                "resizable": false,
                "fullscreen": false,
                "decorations": true,
                "center": true,
                "transparent": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
